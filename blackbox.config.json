{
  "name": "tajweed-assessment",
  "type": "react",
  "build": {
    "command": "npm run build",
    "output": "build"
  },
  "env": {
    "NODE_ENV": "production"
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "static": {
    "directory": "build",
    "headers": {
      "/**": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      },
      "/static/**": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    }
  }
}
